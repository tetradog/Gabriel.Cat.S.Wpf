<UserControl x:Class="Gabriel.Cat.Wpf.SwitchButtonLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gabriel.Cat.Wpf"
             mc:Ignorable="d" 
             Height="20" d:DesignWidth="300" >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gLeftOff" Grid.Column="0"/>
        <Grid x:Name="gLeft" Grid.Column="0" MouseLeftButtonUp="gLeft_MouseLeftButtonUp" />
        <TextBlock x:Name="txtLabel" Grid.Column="1" MouseLeftButtonUp="Grid_MouseLeftButtonUp"/>
        <Grid x:Name="gRightOff" Grid.Column="2"/>
        <Grid x:Name="gRight" Grid.Column="2" MouseLeftButtonUp="gRight_MouseLeftButtonUp" Visibility="Hidden"/>
        
    </Grid>
</UserControl>
